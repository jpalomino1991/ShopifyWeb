@model cloudscribe.Pagination.Models.PagedResult<Product>

@{ 
    ViewData["Title"] = "Index";
    ViewData["Controller"] = "Products";
    ViewData["Action"] = "Index";
}

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-action="Index" method="get">
    <div class="row">
        <div class="col">
            <div class="form-group">
                <label for="Nombre" class="control-label">Nombre</label>
                <input type="text" name="ByName" value="" class="form-control" />
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label for="Marca" class="control-label">Marca</label>
                <select class="custom-select" name="byVendor">
                    <option selected>Open this select menu</option>
                    <option value="1">One</option>
                    <option value="2">Two</option>
                    <option value="3">Three</option>
                </select>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label for="Tipo" class="control-label">Tipo</label>
                <select class="custom-select" name="byType">
                    <option selected>Open this select menu</option>
                    <option value="1">One</option>
                    <option value="2">Two</option>
                    <option value="3">Three</option>
                </select>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label for="Stock" class="control-label">Stock</label>
                <select class="custom-select" name="byStock">
                    <option value="1">Todos</option>
                    <option value="2">Con Stock</option>
                    <option value="3">Sin Stock</option>
                </select>
            </div>
        </div>
    </div>
    <input type="submit" value="Buscar" class="btn btn-info">
    <a asp-action="Index">Quitar Filtro</a>
</form>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayName("Nombre")
            </th>
            <th>
                @Html.DisplayName("Marca")
            </th>
            <th>
                @Html.DisplayName("URL")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Data) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vendor)
            </td>
            <td>
                <a href="@Environment.GetEnvironmentVariable("WEB_URL")@item.Handle" target="_blank">Ver en Web</a>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<partial name="_PaginationPartial" view-data="ViewData" model="Model" />