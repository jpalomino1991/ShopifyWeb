@model ShopifyWeb.Models.EditProduct

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.productDetail[0].Id" />
            <div class="form-group">
                <label class="control-label">Título</label>
                <input asp-for="@Model.productDetail[0].Title" class="form-control" />
                <span asp-validation-for="@Model.productDetail[0].Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Descripción</label>
                <textarea id="desc" asp-for="@Model.productDetail[0].Description" class="form-control"></textarea>
                <span asp-validation-for="@Model.productDetail[0].Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.productDetail[0].Tags" class="control-label"></label>
                <textarea asp-for="@Model.productDetail[0].Tags" class="form-control"></textarea>
                <span asp-validation-for="@Model.productDetail[0].Tags" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label class="control-label">Marca</label>
                        <input asp-for="@Model.productDetail[0].Vendor" class="form-control" />
                        <span asp-validation-for="@Model.productDetail[0].Vendor" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label class="control-label">Tipo de Producto</label>
                        <input asp-for="@Model.productDetail[0].ProductType" class="form-control" />
                        <span asp-validation-for="@Model.productDetail[0].ProductType" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label asp-for="@Model.productDetail[0].Handle" class="control-label"></label>
                        <input asp-for="@Model.productDetail[0].Handle" class="form-control" />
                        <span asp-validation-for="@Model.productDetail[0].Handle" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label asp-for="@Model.productDetail[0].SKU" class="control-label"></label>
                        <input asp-for="@Model.productDetail[0].SKU" class="form-control" />
                        <span asp-validation-for="@Model.productDetail[0].SKU" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-9 control-label">
                    Subir Imagen(es)
                </label>
                <div class="class="file-loading"">
                    <input asp-for="@Model.images" id="input2" type="file" multiple>
                </div>
            </div>

            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>SKU</th>
                        <th>Talla</th>
                        <th>Precio</th>
                        <th>Precio promocion</th>
                        <th>Stock</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 1; i < Model.productDetail.Count(); i++)
                    {
                        <tr>
                            <td>@Model.productDetail[i].SKU</td>
                            <td>@Model.productDetail[i].Size</td>
                            <td><input asp-for="@Model.productDetail[i].Price" class="form-control" /></td>
                            <td><input asp-for="@Model.productDetail[i].CompareAtPrice" class="form-control" /></td>
                            <td><input asp-for="@Model.productDetail[i].Stock" class="form-control" /></td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="form-group">
                <input type="submit" value="Guardar y Subir" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar</a>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            $("#desc").summernote();
            $("#input2").fileinput({
                showUpload: false,
                dropZoneEnabled: false
            });
        });
    </script>
}