@model cloudscribe.Pagination.Models.PagedResult<Logs>

@{
    ViewData["Title"] = "Index";
    ViewData["Controller"] = "Logs";
    ViewData["Action"] = "Index";
}

<form asp-action="Index" method="get">
    <input id="date" name="ByDate" value="@ViewBag.byDate" width="234" />
    <input type="submit" value="Buscar" class="btn btn-info">
    <a asp-action="Index">Quitar Filtro</a>
</form>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>
                Nombre de la Tarea
            </th>
            <th>
                Fecha de Inicio
            </th>
            <th>
                Fecha Fin
            </th>
            <th>
                Detalle
            </th>
            <th>
                Estado
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Data)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateStart)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateEnd)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Detail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
            </tr>
        }
    </tbody>
</table>

<partial name="_PaginationPartial" view-data="ViewData" model="Model" /> <p>Total : @Model.TotalItems</p>

@section Scripts {
    <script>
        $(document).ready(function () {            
            $("#date").datepicker({
                dateFormat: "yy-mm-dd"
            });
        });
    </script>
}